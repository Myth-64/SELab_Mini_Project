            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "assigneeToId",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "assignedPaperId",
            "in": "query",
            "required": true,
            "style": "form",
            "explode": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/papers/countByStatus": {
      "get": {
          "tags": [
              "Papers"
          ],
          "description": "Returns a frequency map of different paper statuses",
          "operationId": "countByStatus",
          "responses": {
              "200": {
                  "description": "OK",
                  "content": {
                      "*/*": {
                          "schema": {
                              "type": "array",
                              "items": {
                                  "$ref": "#/components/schemas/PaperStatusCountMap"
                              }
                          }
                      }
                  }
              }
          }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Role"
            }
          },
          "tracks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Track"
            }
          }
        }
      },
      "Paper": {
        "type": "object",
        "properties": {
          "paperId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "author": {
            "$ref": "#/components/schemas/User"
          },
          "tracks": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Track"
            }
          }
        }
      },
      "Review": {
        "type": "object",
        "properties": {
          "reviewId": {
            "type": "integer",
            "format": "int64"
          },
          "paper": {
            "$ref": "#/components/schemas/Paper"
          },
          "author": {
            "$ref": "#/components/schemas/User"
          },
          "reviewDescription": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "assignedBy": {
            "$ref": "#/components/schemas/User"
          },
          "deadline": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Track": {
        "type": "object",
        "properties": {
          "trackId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          }
        }
      },
      "Role": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          }
        }
      },
      "AuthRequest": {
        "type": "object",
        "properties": {
            "username": {
                "type": "string"
            },
            "password": {
                "type": "string"
            }
        }
      },
      "PaperStatusCountMap": {
        "type": "object",
        "properties": {
            "count": {
                "type": "integer",
                "format": "int32"
            },
            "status": {
                "type": "string"
            }
        }
      }
    }
  }
}